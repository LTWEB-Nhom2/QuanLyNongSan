@model IEnumerable<NongSanDungHa.Models.ADO.user_order_product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Đơn hàng</h2>

<p>
    @Html.ActionLink("Thêm mới", "CreateNew")
</p>
<p>

    Lượt review: @ViewBag.TotalUserOrderProduct
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.user_order_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.order_product_amount)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user_order_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order_product_amount)
            </td>

            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.user_order_id , product_id = item.product_id}) |
                @Html.ActionLink("Chi tiết", "Detail", new { id = item.user_order_id, product_id = item.product_id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.user_order_id, product_id = item.product_id })
            </td>
        </tr>
    }

</table>
