@model IEnumerable<NongSanDungHa.Models.ADO.user_order>

@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>SearchResult</h2>
<div class="col-md-12 mb-4">
    <h1 style="color: #28a745">Bạn tìm đơn hàng "@ViewBag.searchKey"</h1>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.user_order_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_account_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.order_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_order_buyer_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_order_address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_order_email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user_order_phonenumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.is_processed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.is_delivered)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.order_total_value)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user_order_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user_account_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user_order_buyer_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user_order_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user_order_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user_order_phonenumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.is_processed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.is_delivered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order_total_value)
            </td>

            <td>

                @Html.ActionLink("Chi tiết", "Detail", new { id = item.user_order_id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.user_order_id })
            </td>
        </tr>
    }

</table>


<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>