@model IEnumerable<NongSanDungHa.Models.ADO.product_review>

@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>SearchResult</h2>
<div class="col-md-12 mb-4">
    <h1 style="color: #28a745">Bạn tìm đánh giá "@ViewBag.searchKey"</h1>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.user_account_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_review_content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.review_owner)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user_account_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_review_content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.review_owner)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.product_review_id }) |
                @Html.ActionLink("Chi tiết", "Detail", new { id = item.product_review_id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.product_review_id })
            </td>
        </tr>
    }

</table>


<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>