@model IEnumerable<NongSanDungHa.Models.ADO.product_review>

@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>SearchResult</h2>
<div class="col-md-12 mb-4">
    <h1 style="color: #28a745">Bạn tìm đánh giá "@ViewBag.searchKey"</h1>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên người dùng")
        </th>
        <th>
            @Html.DisplayName("Sản Phẩm")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_review_content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.review_owner)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user_account_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_review_content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.review_owner)
            </td>
            <td>
               
                @Html.ActionLink(" ", "Detail", new { id = item.product_review_id }, new { @class = "fas fa-eye btn btn-success me-1" }) 
                @Html.ActionLink(" ", "Delete", new { id = item.product_review_id }, new { @class = "fas fa-trash-alt btn btn-danger me-1" })
            </td>
        </tr>
    }

</table>


<div>
    @Html.ActionLink("Trở về danh sách", "Index",new {@class ="btn btn-primary"})
</div>