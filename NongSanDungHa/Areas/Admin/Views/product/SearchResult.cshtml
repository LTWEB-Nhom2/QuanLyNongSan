@model IEnumerable<NongSanDungHa.Models.ADO.product>

@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>SearchResult</h2>
<div class="col-md-12 mb-4">
    <h1 style="color: #28a745">Bạn tìm Sản Phẩm "@ViewBag.searchKey"</h1>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("STT")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_category_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.product_thumbnail_image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_category_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>

            <td>
                <img style="width:100px;height: 100px" src="@item.product_thumbnail_image" />

            </td>
            <td>
                @{ string price = string.Format("{0:0,0.000} đ", item.product_price);
                }
                @price
               
            </td>
            <td>
                @Html.ActionLink(" ", "Detail", new { id = item.product_id, category_id = item.product_category_id }, new { @class = "fas fa-eye btn btn-success me-1" })
                @Html.ActionLink(" ", "Edit", new { id = item.product_id, category_id = item.product_category_id }, new { @class = "fas fa-edit btn btn-warning me-1" })
                @Html.ActionLink(" ", "Delete", new { id = item.product_id }, new { @class = "fas fa-trash-alt btn btn-danger me-1" })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>