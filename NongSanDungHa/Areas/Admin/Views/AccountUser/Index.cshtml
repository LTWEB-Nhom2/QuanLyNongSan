<div class="modal fade" id="ModalView" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thông tin chi tiết</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                   
                    <dt>
                        @Html.DisplayNameFor(model => model.user_username)

                    </dt>

                    <dd>
                        <input type="hidden" id="user_id" />
                        <input type="text" id="username" class="form-control" />

                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.user_password)

                    </dt>

                    <dd>

                        <input type="text" id="password" class="form-control" />

                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.user_firstname)

                    </dt>

                    <dd>

                        <input type="text" id="firstname" class="form-control" />

                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.user_lastname)
                    </dt>

                    <dd>
                        <input type="text" id="lastname" class="form-control" />
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.user_gender)
                    </dt>

                    <dd>

                        <input type="text" id="gender" class="form-control" />
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.user_address)
                    </dt>

                    <dd>
                        <input type="text" id="address" class="form-control" />
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.user_email)
                    </dt>

                    <dd>
                        <input type="email" id="email" class="form-control" />
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.user_phonenumber)
                    </dt>

                    <dd>
                        <input type="number" id="phonenumber" class="form-control" />
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.user_member_tier)
                    </dt>

                    <dd>
                        <input type="text" id="tier" class="form-control" />
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.user_point)
                    </dt>

                    <dd>
                        <input type="number" id="point" class="form-control" />
                    </dd>

                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
