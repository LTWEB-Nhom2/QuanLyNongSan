@model NongSanDungHa.Models.ADO.user_account

@{
    ViewBag.Title = "CreateNew";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Thêm mới</h2>

@using (Html.BeginForm())
