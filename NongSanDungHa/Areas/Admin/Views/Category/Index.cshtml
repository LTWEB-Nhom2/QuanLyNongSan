@model IEnumerable<NongSanDungHa.Models.ADO.product_category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Loại hàng</h2>
<form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" action="/Admin/Category/SearchResult" method="get">
    <div class="input-group">
        <input type="search" class="form-control bg-light border-0 small" placeholder="Search by name"
               aria-label="Search" aria-describedby="basic-addon2" name="searchKey">
        <div class="input-group-append">
            <button class="btn btn-primary" style="background-color: #52a851;" type="submit" name="submit">
                <i class="fas fa-search fa-sm"></i>
            </button>
        </div>
    </div>
</form>
<p>
    @Html.ActionLink("Thêm mới", "CreateNew")
</p>
<p>
    Tổng loại mặt hàng: @ViewBag.TotalCategory
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product_category_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_category_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_category_description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_category_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_category_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_category_description)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.product_category_id }) |
                @Html.ActionLink("Chi tiết", "Detail", new { id = item.product_category_id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.product_category_id })
            </td>
        </tr>
    }

</table>
