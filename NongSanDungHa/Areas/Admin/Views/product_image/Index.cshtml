@model IEnumerable<NongSanDungHa.Models.ADO.product_image>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Hình ảnh sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới", "CreateNew")
</p>
<p>

    Tổng số ảnh: @ViewBag.TotalProductImage
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_image_file_name)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_id)
            </td>
            <td>
                <img style="width:100px;height: 100px" src="@item.product_image_file_name" />

            </td>

            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.product_image_id }) |
                @Html.ActionLink("Chi tiết", "Detail", new { id = item.product_image_id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.product_image_id })
            </td>
        </tr>
    }

</table>
