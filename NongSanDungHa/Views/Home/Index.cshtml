@using NongSanDungHa.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


<style>
        .ads-item {
            width: 100px;
        }

        .left {
            float: left
        }

        .right {
            float: right;
        }

        .title-1-container {
            background-color: #52a851;
            padding: 10px;
            margin: auto;
        }

        .title-1-content {
            color: white;
            border: 1px solid;
            padding: 20px;
            font-size: 20px;
        }

        .discount-h2 {
            font-size: 15px;
        }

        .mod-title {
            margin: 2px 0px 2px 0px;
        }
    </style>}

}
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">

            <img src="https://admin.nongsandungha.com/wp-content/uploads/2023/05/banner-4-5-2023-min.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://admin.nongsandungha.com/wp-content/uploads/2023/04/banner-dh-1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://admin.nongsandungha.com/wp-content/uploads/2023/04/banner-dh-3.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://admin.nongsandungha.com/wp-content/uploads/2023/04/banner-dh-4.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://admin.nongsandungha.com/wp-content/uploads/2023/04/banner-dh-5.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<div class="container" style="margin-top: 25px;">
    <div class="row justify-content-center">
        <div class="col-md-12 w-75">
            <div class="title-1-container text-center">
                <h1 class="title-1-content">NÔNG SẢN DŨNG HÀ - MANG SỨC KHOẺ VÀ CUỘC SỐNG AN LÀNH ĐẾN MỌI NƠI</h1>
            </div>

        </div>
        <div class="col-md-12">
            <div class="mod-title text-center">
                <span class="text-white " style="background-color: #52a851;">★ CHƯƠNG TRÌNH KHUYẾN MẠI</span>
            </div>
        </div>
        <div class="col-md-12 mb-4">
            <div class="row">
                @{
                    foreach (product_discount_event item in ViewBag.DiscountEvent)
                    {
                        <div class="col-md-6">
                            <div class="card mb-3" style="max-width: 540px;">
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <img src="@item.discount_event_image" class="img-fluid rounded-start" alt="...">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title"><a href="#">@item.discount_event_name</a> </h5>
                                            <p class="card-text">@item.discount_event_description</p>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        @{
            foreach (product_category category in ViewBag.Category)
            {
                <div class="col-md-12 d-flex">
                    <div class="row w-100">
                        <div class="col-md-3">
                            @Html.ActionLink(category.product_category_name, "ShowCategory", new { id = category.product_category_id }, new { @class = "btn", style = "border-radius: 0px;background-color: #2aa745;color: white; font-weight:bold;text-transform: uppercase;" })

                        </div>
                        <div class="col-md-4"></div>
                        <div class="col-md-5 text-end">
                            @Html.ActionLink("+ Xem Tất Cả", "ShowCategory", new { id = category.product_category_id }, new { @class = "btn", style = "background-color: #52a851;color:white", role = "button" })

                        </div>
                    </div>


                </div>
                <div class="col-md-12">
                    <hr style="color: green; border: 1px solid #2aa745" />
                </div>
                <div class="col-md-12 mb-5">
                    <div class="row">
                        @{
                                        int i = 1;
                            foreach (product item in ViewBag.products)
                            {

                                if (item.product_category_id == category.product_category_id && i<9)
                                {
                                    i++;
                                    <div class="col-md-3">
                                                                <div class="card mb-3" style="width: 19rem">
                                                                    
                                                                    <a href="~/Home/ShowDetailProduct/@item.product_id?product_category_id=@item.product_category_id">  <img style="height: 265px" src="@item.product_thumbnail_image" class="card-img-top" alt="..."></a>
                                                                    <div class="card-body">
                                                                        <h5 class="card-title text-center" style="height:48px">@Html.ActionLink(item.product_name, "ShowDetailProduct", new { id = item.product_id, product_category_id = item.product_category_id })</h5>
                                                                        <p class="card-text text-center" style="font-weight: 500">HCM: @item.product_price đ</p>
                                                                        @{
                                                                         
                                                                         
                                                                                @Html.ActionLink("Mua Ngay", "ShowDetailProduct", new { Controller = "Home", id = item.product_id, product_category_id = item.product_category_id }, new { @class = "btn btn-primary", style = "width: 100%; background-color: #52a851; border-color: white" })
                                                                            

                                                                        }


                                                                    </div>
                                                                </div>
                                    </div>
                                }
                            }
                        }

                    </div>
                </div>

            }
        }




      



    </div>

