@using NongSanDungHa.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


    <style>
        .ads-item {
            width: 100px;
        }

        .left {
            float: left
        }

        .right {
            float: right;
        }

        .title-1-container {
            background-color: #52a851;
            padding: 10px;
            margin: auto;
        }

        .title-1-content {
            color: white;
            border: 1px solid;
            padding: 20px;
            font-size: 20px;
        }

        .discount-h2 {
            font-size: 15px;
        }

        .mod-title {
            margin: 2px 0px 2px 0px;
        }
    </style>
}

}
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">

            <img src="https://admin.nongsandungha.com/wp-content/uploads/2023/05/banner-4-5-2023-min.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://admin.nongsandungha.com/wp-content/uploads/2023/04/banner-dh-1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://admin.nongsandungha.com/wp-content/uploads/2023/04/banner-dh-3.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://admin.nongsandungha.com/wp-content/uploads/2023/04/banner-dh-4.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://admin.nongsandungha.com/wp-content/uploads/2023/04/banner-dh-5.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="container" style="margin-top: 25px;">
    <div class="row justify-content-center">
        <div class="col-md-12 w-75">
            <div class="title-1-container text-center">
                <h1 class="title-1-content">NÔNG SẢN DŨNG HÀ - MANG SỨC KHOẺ VÀ CUỘC SỐNG AN LÀNH ĐẾN MỌI NƠI</h1>
            </div>

        </div>
        <div class="col-md-12 mb-4">

        </div>
        @{
            foreach (product_category category in ViewBag.Category)
            {
                if (category.product_category_id == 4)
                {
                    <div class="col-md-12 d-flex">
                        <div class="row w-100">
                            <div class="col-md-3">
                                @Html.ActionLink(category.product_category_name, "ShowCategory", new { id = 4 }, new { @class = "btn", style = "border-radius: 0px;background-color: #2aa745;color: white; font-weight:bold;text-transform: uppercase;" })
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-5 text-end">
                                @Html.ActionLink("+ Xem Tất Cả", "ShowCategory", new { id = 4 }, new { @class = "btn", style = "background-color: #52a851;color:white", role = "button" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <hr style="color: green; border: 1px solid #2aa745" />
                    </div>
                    <div class="col-md-12 mb-5">
                        <div class="row">
                            @{
                                int i = 1;
                                foreach (product item in ViewBag.products)
                                {

                                    if (item.product_category_id == category.product_category_id && i < 9 && item.product_category_id == 4)
                                    {
                                        i++;
                                        <div class="col-md-3">
                                            <div class="card mb-3" style="width: 19rem">

                                                <a href="~/Home/ShowDetailProduct/@item.product_id?product_category_id=@item.product_category_id">  <img style="height: 265px" src="@item.product_thumbnail_image" class="card-img-top" alt="..."></a>
                                                <div class="card-body">
                                                    <h5 class="card-title text-center" style="height:48px">@Html.ActionLink(item.product_name, "ShowDetailProduct", new { id = item.product_id, product_category_id = item.product_category_id })</h5>
                                                    <p class="card-text text-center" style="font-weight: 500">HCM: @item.product_price đ</p>
                                                    @{
                                                        @Html.ActionLink("Mua Ngay", "ShowDetailProduct", new { Controller = "Home", id = item.product_id, product_category_id = item.product_category_id }, new { @class = "btn btn-primary", style = "width: 100%; background-color: #52a851; border-color: white" })
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            }

                        </div>
                    </div>
                }
            }
        }
    </div>
    <div class="container" style="margin-top: 25px;">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title" style="text-align:justify;color:forestgreen">Địa chỉ mua Quà biếu, Quà tết ý nghĩa 2021-2022 | Dễ Mua, Dễ Biếu tại Sài Gòn</h3>
                        <p class="card-text" style="text-align:justify">
                            Mỗi khi dịp lễ, dịp Tết nguyên đán đến gần, chúng ta bắt đầu tìm những món quà biếu, quà tết ý nghĩa và đầy thiết thực để dành tặng bố mẹ, người thân trong gia đình,
                            những món quà tết tặng sếp độc đáo và tri ân khách hàng. Tuy nhiên câu hỏi được đặt ra là mua quà tết thì nên mua gì và mua ở đâu?
                        </p>
                        <p class="card-text" style="font-style:italic;font-weight:bold;color:red">
                            Nông Sản Dũng Hà chuyên cung cấp các loại quà biếu, quà tết phù hợp với nhu cầu sử dụng của mọi đối tượng.
                        </p>
                        <h4 class="card-title" style="text-align:justify;color:forestgreen">Mua Quà Biếu, Quà Tết Cho Sếp</h4>
                        <p class="card-text">
                            Khi lựa chọn các món quà biếu tết cho sếp vào các dịp lễ tết, mọi người hay có xu hướng tìm các sản phẩm độc đáo, mới lạ để tạo ấn tượng với sếp. Tuy nhiên, xu hướng quà biếu sếp hiện nay thiết thực hơn, đặc biệt là gắn liền với cuộc sống và sức khỏe của người sử dụng. Dưới đây là một số gợi ý của chúng tôi về quà tết biếu sếp để bạn lựa chọn:
                        </p>
                        <div class="row justify-content-center">
                            <div class="col-md-4 text-center">
                                <img src="https://admin.nongsandungha.com/uploads/uploads/2019/11/gio-qua-phuc-loc.jpg" alt="Giỏ Quà Phúc Lộc" class="img-fluid mx-auto d-block">
                                <p style="color:forestgreen">Giỏ Quà Phúc Lộc</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <img src="https://admin.nongsandungha.com/uploads/uploads/2019/11/tet-nhu-y.jpg" alt="Bộ Quà Tết Như Ý" class="img-fluid mx-auto d-block">
                                <p style="color:forestgreen">Bộ Quà Tết Như Ý</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <img src="https://admin.nongsandungha.com/uploads/uploads/2019/11/gio-qua-vien-man.jpg" alt="Giỏ Quà Viên Mãn" class="img-fluid mx-auto d-block">
                                <p style="color:forestgreen">Giỏ Quà Viên Mãn</p>
                            </div>
                        </div>
                        <h4 class="card-title" style="text-align:justify;color:forestgreen">Mua Quà Biếu, Quà Tết Cho Gia Đình</h4>
                        <p class="card-text" style="text-align:justify">
                            Tết đến xuân về là dịp mọi người thể hiện lòng biết ơn, sự đền ơn đáp nghĩa với bố mẹ và tình yêu thường với gia đình mình bằng các món quà tết vừa đơn giản vừa ý nghĩa. Dưới đây là một số món quà tết ý nghĩa để bạn lựa chọn:
                        </p>
                        <div class="row justify-content-center">
                            <div class="col-md-4 text-center">
                                <img src="https://admin.nongsandungha.com/uploads/uploads/2019/11/gio-qua-truong-tho.jpg" alt="Giỏ Quà Trường Thọ" class="img-fluid mx-auto d-block">
                                <p style=";color:forestgreen">Giỏ Quà Trường Thọ</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <img src="https://admin.nongsandungha.com/uploads/uploads/2019/11/tet-doan-vien.jpg" alt="Bộ Quà Tết Đoàn Viên" class="img-fluid mx-auto d-block">
                                <p style="color:forestgreen">Bộ Quà Tết Đoàn Viên</p>
                            </div>

                        </div>

                        <h4 class="card-title" style="text-align:justify;color:forestgreen">Giá quà biếu, quà tết 2023-2024 tại Dũng Hà</h4>
                        <p class="card-text" style="text-align:justify">
                            Dũng Hà có 3 mức giá cho các sản phẩm quà biếu, quà tết như sau:
                        </p>
                        <ul>
                            <li>Quà biếu tết cao cấp: Giá > 2.000.000đ</li>
                            <li>Quà biếu tết trung bình: Giá > 800.000đ</li>
                            <li>Quà biếu tết bình dân: Giá khoảng 500.000 - 800.000đ</li>
                        </ul>

                        <h4 class="card-title" style="text-align:justify;color:forestgreen">Các Mẫu mã gói quà biếu, quà tết theo yêu cầu</h4>
                        <p class="card-text" style="text-align:justify">
                            Chúng tôi có nhiều cách đóng gói, gói quà tết để khách hàng lựa chọn phù hợp
                        </p>
                        <ul>
                            <li><strong>Giỏ:</strong> Giỏ nhựa, Giỏ đan</li>
                            <li><strong>Hộp:</strong> Hộp carton, Hộp giấy</li>
                            <li><strong>Túi:</strong> Túi in nilong, in giấy</li>
                            <li><strong>Thiệp:</strong> nhiều mẫu mã thiệp độc đáo, ý nghĩa</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
